@model IEnumerable<SkyrimShop.Models.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{ 
<p>
    Find: @Html.TextBox("SearchString")
    <input type="submit" value="Search" />
</p>
}
<table id ="Items" class="table">
    <tr>
    <th>
        @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
    </th>
    <th>
        @Html.ActionLink("Type", "Index", new { sortOrder = ViewBag.TypeSortParm })
    </th>
    <th>
        @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.PriceSortParm })
    </th>
    <th>
        @Html.DisplayNameFor(model => model.ItemDescription)
    </th>
    <th>
        @Html.ActionLink("Class", "Index", new { sortOrder = ViewBag.ClassSortParm })
    </th>
    <th></th>
</tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemClass)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ItemID })
        </td>
    </tr>
}

</table>
